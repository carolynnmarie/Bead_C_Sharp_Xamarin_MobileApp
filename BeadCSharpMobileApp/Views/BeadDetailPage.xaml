<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BeadCSharpMobileApp.Views.BeadDetailPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Material:" FontSize="Small" />
        <Label Text="{Binding Bead.Material}" FontSize="Medium" />
        <Label Text="Shape:" FontSize="Small"/>
        <Label Text="{Binding Bead.Shape}" FontSize="Medium"/>
        <Label Text="Color:" FontSize="Small"/>
        <Label Text="{Binding Bead.Color}" FontSize="Medium"/>
        <Label Text="Description:" FontSize="Small" />
        <Label Text="{Binding Bead.Description}" FontSize="Medium" />
    </StackLayout>
</ContentPage>